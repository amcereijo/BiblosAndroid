<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:paddingBottom="2dp">

    <TextView android:id="@+id/order_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp" android:text="Pedido:"
        android:textStyle="bold"/>
    <TextView android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_id_title"
        android:layout_margin="1dp"/>

    <TextView android:id="@+id/order_client_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_id_title"
        android:layout_alignParentLeft="true"
        android:layout_margin="1dp"
        android:text="Cliente:"
        android:textStyle="bold"/>
    <TextView android:id="@+id/order_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_id"
        android:layout_toRightOf="@id/order_client_title"
        android:layout_margin="1dp"/>

    <TextView android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_client_title"
        android:layout_margin="1dp"/>
    <Button android:id="@+id/order_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/show_order_button"
        android:onClick="showOrder"
        android:tag=""/>
</RelativeLayout>
